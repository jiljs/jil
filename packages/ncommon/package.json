{
  "name": "@jil/ncommon",
  "description": "A common utilities and helpers for Node.js",
  "version": "0.2.6",
  "keywords": [],
  "main": "index.js",
  "types": "index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "author": "TY",
  "license": "MIT",
  "scripts": {
    "version": "yarn run copy:assets",
    "copy:assets": "cpy package.json .npmignore LICENSE README.md CHANGELOG.md dist",
    "build": "nb-tsc && yarn run copy:assets",
    "clean": "nb-clean jil-ncommon*.tgz dist/* *.tsbuildinfo package",
    "pretest": "yarn run clean && yarn run build",
    "test": "yarn run jest",
    "jest": "jest",
    "verify": "npm pack && tar xf jil-ncommon*.tgz && tree package && yarn run clean"
  },
  "dependencies": {
    "@jil/common": "^0.2.26",
    "@jil/decorators": "^0.2.8",
    "resolve": "^1.22.0",
    "tily": "^2.14.3"
  },
  "devDependencies": {
    "@jil/testlab": "^0.2.5",
    "@nutol/build": "^0.2.4",
    "@nutol/eslint-config": "^0.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/resolve": "^1.20.1"
  },
  "files": [
    "**/*",
    "!__tests__"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  }
}
