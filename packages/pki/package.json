{
  "name": "@jil/pki",
  "description": "A JavaScript library implementing the formats that are used in PKI applications.",
  "version": "0.1.6",
  "keywords": [
    "pki",
    "certificate",
    "sign",
    "validate"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "author": "TY",
  "license": "MIT",
  "scripts": {
    "build": "nb-tsc",
    "postbuild": "cpy \"./src/__tests__/fixtures/**/*\" \"./dist/__tests__/fixtures\"",
    "clean": "nb-clean jil-pki*.tgz dist *.tsbuildinfo package",
    "pretest": "yarn run clean && yarn run build",
    "test": "yarn run jest",
    "jest": "jest",
    "verify": "npm pack && tar xf jil-pki*.tgz && tree package && yarn run clean"
  },
  "dependencies": {
    "@jil/bufio": "^0.1.6",
    "@jil/crypto": "^0.1.6",
    "fast-glob": "^3.2.11"
  },
  "devDependencies": {
    "@nutol/build": "^0.2.4",
    "@nutol/eslint-config": "^0.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "cpy-cli": "^3.1.1"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "publishConfig": {
    "access": "public"
  }
}
