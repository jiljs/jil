{
  "name": "@jil/pki",
  "description": "A JavaScript library implementing the formats that are used in PKI applications.",
  "version": "0.1.1",
  "keywords": [
    "pki",
    "certificate",
    "sign",
    "validate"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "author": "TY",
  "license": "MIT",
  "scripts": {
    "build": "nb-tsc",
    "postbuild": "cpy \"./src/__tests__/fixtures/**/*\" \"./dist/__tests__/fixtures\"",
    "clean": "nb-clean jil-pki*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run clean && npm run build",
    "test": "npm run jest",
    "jest": "jest",
    "verify": "npm pack && tar xf jil-pki*.tgz && tree package && npm run clean"
  },
  "dependencies": {
    "@jil/bufio": "^0.1.2",
    "@jil/crypto": "^0.1.2",
    "fast-glob": "^3.2.11"
  },
  "devDependencies": {
    "@nutol/build": "^0.2.0",
    "@nutol/eslint-config": "^0.2.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "cpy-cli": "^3.1.1"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "publishConfig": {
    "access": "public"
  }
}
