{
  "name": "@jil/common-node",
  "description": "A common utilities and helpers for Node.js",
  "version": "0.1.0",
  "keywords": [],
  "main": "index.js",
  "types": "index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "author": "TY",
  "license": "MIT",
  "scripts": {
    "version": "npm run copy:assets",
    "copy:assets": "cpy package.json .npmignore LICENSE README.md CHANGELOG.md dist",
    "build": "nb-tsc && npm run copy:assets",
    "clean": "nb-clean jil-common-node*.tgz dist/* *.tsbuildinfo package",
    "pretest": "npm run clean && npm run build",
    "test": "npm run jest",
    "jest": "jest",
    "verify": "npm pack && tar xf jil-common-node*.tgz && tree package && npm run clean"
  },
  "dependencies": {
    "@jil/common": "^0.2.19",
    "@jil/decorators": "^0.2.1",
    "resolve": "^1.22.0",
    "tily": "^2.13.2"
  },
  "devDependencies": {
    "@jil/testlab": "^0.2.1",
    "@nutol/build": "^0.2.1",
    "@nutol/eslint-config": "^0.2.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@types/resolve": "^1.20.1"
  },
  "files": [
    "**/*",
    "!__tests__"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  }
}
