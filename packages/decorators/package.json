{
  "name": "@jil/decorators",
  "description": "Experimental decorators for common patterns",
  "version": "0.2.2",
  "keywords": [],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "author": "TY",
  "license": "MIT",
  "scripts": {
    "version": "yarn run copy:assets",
    "copy:assets": "cpy package.json .npmignore LICENSE README.md CHANGELOG.md dist",
    "build": "nb-tsc && yarn run copy:assets",
    "clean": "nb-clean jil-decorators*.tgz dist/* *.tsbuildinfo package",
    "pretest": "yarn run clean && yarn run build",
    "test": "yarn run jest",
    "jest": "jest",
    "verify": "npm pack && tar xf jil-decorators*.tgz && tree package && yarn run clean"
  },
  "devDependencies": {
    "@jil/common": "^0.2.20",
    "@nutol/build": "^0.2.2",
    "@nutol/eslint-config": "^0.2.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "cpy-cli": "^3.1.1"
  },
  "files": [
    "**/*",
    "!__tests__"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  }
}
